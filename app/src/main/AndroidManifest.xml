<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.android.innocurses.studentregister">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Activities.ProfileActivity">
        </activity>
        <activity android:name=".Activities.RegistrationActivity">
        </activity>
        <activity android:name=".Activities.GroupsActivity">
        </activity>
        <activity android:name=".Activities.StudentsActivity">
        </activity>
        <activity android:name=".Activities.UpdateStudentActivity">
        </activity>
        <activity android:name=".Activities.AdminActivity">
        </activity>
        <activity
            android:name=".Activities.FilterGroupsActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden">

        </activity>
        <activity
            android:name=".Activities.FilterStudentsActivity"
            android:launchMode="singleTask"
            >
        </activity>
        <activity android:name=".Activities.FilterJournalActivity"
                  android:launchMode="singleTask"
            >
        </activity>
    </application>

</manifest>