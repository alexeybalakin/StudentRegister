<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.android.innocurses.studentregister.MainActivity">

    <EditText
        android:id="@+id/loginEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Login"
        tools:layout_editor_absoluteX="85dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="65dp"/>

    <EditText
        android:id="@+id/passEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        tools:layout_editor_absoluteX="85dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/loginEditText"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/okButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/passEditText"
            app:layout_constraintRight_toLeftOf="@+id/regButton"
            android:layout_marginRight="31dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/passEditText"
            app:layout_constraintHorizontal_bias="0.0"/>

        <Button
            android:id="@+id/regButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/passEditText"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/passEditText"/>

    </LinearLayout>



</LinearLayout>
