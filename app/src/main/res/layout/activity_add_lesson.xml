<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.android.innocurses.studentregister.Activities.AddLessonActivity">


    <EditText
        android:id="@+id/etDate"
        android:layout_margin="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"/>

    <EditText
        android:id="@+id/etTime"
        android:layout_marginTop="16dp"
        android:layout_margin="4dp"

        android:layout_below="@id/etDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time"/>

    <Button
        android:id="@+id/bDate"
        android:onClick="setDate"
        android:layout_toRightOf="@id/etDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Date"/>

    <Button
        android:id="@+id/bTime"
        android:onClick="setTime"
        android:layout_toRightOf="@id/etTime"
        android:layout_below="@id/bDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Time"/>

    <EditText
        android:id="@+id/etTitle"
        android:layout_margin="4dp"
       android:layout_below="@id/etTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Title"/>

    <EditText
        android:id="@+id/etDescr"
        android:layout_margin="4dp"
        android:layout_below="@id/etTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Description"/>

    <Button
        android:id="@+id/bSubmit"
        android:onClick="submit"
        android:layout_below="@id/etDescr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"/>

</RelativeLayout>